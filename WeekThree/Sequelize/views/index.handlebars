<h1>Restaurants</h1>

<div class= "container">

    {{#each restaurants}}
    
    

    <div class= "restaurants ">
        <a href="/restaurants/{{this.id}}">
        <div class="flip-card">
            <div class="flip-card-inner">
                <div class="flip-card-front">
                    <img src="{{this.image}}" alt="Avatar" style="width:300px;height:300px;">
                </div>
                <div class="flip-card-back">
                    <h1>{{this.name}}</h1> 
                     {{#each this.menus}}
                    <p>{{this.title}}</p>
                    {{/each}} 
                </div>
            </div>
        </div>
        </a>
    </div>
    {{/each}}

</div>
